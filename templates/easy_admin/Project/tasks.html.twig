<table class="table table-striped table-bordered">
    <thead>
        <tr>
            <th>#</th>
            <th>Author</th>
            <th>Content</th>
        </tr>
    </thead>
    {%  for task in value %}
        <tr>
            <td>{{ task.id }}</td>
            <td>{{ task.author.username }}</td>
            <td>{{ task.content }}</td>
        </tr>
    {% endfor %}
</table>
